<EmberTable as |t|>
  <t.head
    @columns={{this.columns}}
    @scrollIndicators="horizontal"
    @widthConstraint="eq-container"
    @resizeMode="fluid" as |h|>
      <h.row as |r|>
        <r.cell as |column|>
          {{#component
               column.component
               field=column.valuePath
               sort=this.sort
          }}
            {{column.name}}
          {{/component}}
        </r.cell>
      </h.row>
  </t.head>
  <t.body @rows={{this.model}} />
</EmberTable>